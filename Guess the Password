#include <iostream>
using namespace std;

int main() {
    string password = "JadenHardy#1"; //password
    for (int i=0; i < 3;i++) {
      string guess; //variable for user input
      cout << "What is the password? "; //asks input
      cin >> guess;
      if (guess == password) { //checks password 
        cout << "Welcome! ";
        break;
      } else {
        cout << "Incorrect! \n";
      }
    } 
   return 0;
}
